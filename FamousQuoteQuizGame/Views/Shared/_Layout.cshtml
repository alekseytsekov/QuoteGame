<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header id="main-nav" class="capitalize">
        <div id="login-menu">
            @Html.Partial("_LoginPartial")
        </div>
        <div id="main-menu">
            <ul class="nav-list">
                <li class="nav-link">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { })</li>
                <li class="nav-link">@Html.ActionLink("Play", "Game", "Game", new {area = ""}, new {})</li>
                <li class="nav-link">@Html.ActionLink("High Score", "Standing", "HighScore", new {area = ""}, new {})</li>
                <li class="nav-link">@Html.ActionLink("Add Quote", "AddQuote", "AddQuote", new {area = ""}, new {})</li>
                <li class="my-icon"><a href="#">&#9776;</a></li>
            </ul>
        </div>
    </header>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - QuoteGame by Aleksey.</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>